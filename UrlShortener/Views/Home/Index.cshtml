@{
    ViewData["Title"] = "Home Page";
}
@model UrlShortener.Models.UrlViewModel;

<div class="text-center">
    <h1 class="display-4">Short URL</h1> 

    @using (Html.BeginForm("ShortenUrl", "Home", FormMethod.Post, htmlAttributes: new { autocomplete = "off"}))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>Provide your URL : &nbsp;</th>
                <th>
                    @Html.TextBoxFor(m => (m.OriginalUrl), new {id = "shortUrlInput", @maxlength="64000", @Value =@Model.OriginalUrl, @required  = "required"}) &nbsp;&nbsp;
                </th>
                <th>
                    <input type="submit" value="Shorten" class="btn btn-secondary"/>
                </th>
            </tr>
            @if (!Model.Hidden)
            {
            <tr>
                <td>Short URL : &nbsp;</td>
                <td><a id="shortURL" href="@Model.ShortUrl"> @Model.ShortUrl </a> </td>
                <td> <input type="submit" value="Copy" class="btn btn-secondary" onclick="copyShortUrl()" /></td>
            </tr>
            }
        </table>
    }
</div>
